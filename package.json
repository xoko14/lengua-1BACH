{
  "name": "Lengua-Castellana-y-Literatura",
  "version": "1.0.0",
  "description": "Teoría y ejercicios de 1º de Bachiller",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"

  },

  "build": {
    "appId": "lengua",
    "dmg": {
      "contents": [{
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/xoko14/lengua-1BACH.git"
  },
  "author": "Xoko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xoko14/lengua-1BACH/issues"
  },
  "homepage": "https://github.com/xoko14/lengua-1BACH#readme",
  "devDependencies": {
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "jquery": "^3.4.0",
    "popper.js": "^1.15.0",
    "tether": "^1.4.5"
  }
}
